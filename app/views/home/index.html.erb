<% if @stock %>
    <%= @stock.company_name %>
    <br/>
    <strong>Company Name: </strong><%= @stock.company_name %> - <%= @stock.symbol %><br/>
    <br/>
    <%= @stock.inspect %>
    <br/>
    <%= @stock_stats.inspect %>

<%elsif @nothing %>
    <%= @nothing %>
<% end %>

<%if @error %>
    <%= @error %>
<% end %>